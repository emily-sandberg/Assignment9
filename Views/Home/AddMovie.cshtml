@{
    ViewData["Title"] = "Add Movie Page";
}

@model Assignment9.Models.Movie

<br />
<div class="text-center">
    <h2>Add a Movie to the Collection</h2>
</div>
<br />

<!--Form for adding a movie-->
<form asp-action="AddMovie" method="post">
    <div class="form-group">
        <label asp-for="Title">Movie Title:</label>
        <input type="text" asp-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <input type="text" asp-for="Category" />
    </div>
    <div class="form-group">
        <label asp-for="Year">Year:</label>
        <input type="text" asp-for="Year" />
    </div>
    <div class="form-group">
        <label asp-for="Director">Director:</label>
        <input type="text" asp-for="Director" />
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Edited">Is the movie edited?</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="LentTo">Lent to:</label>
        <input type="text" asp-for="LentTo" />
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes:</label>
        <input type="text" asp-for="Notes" />
    </div>
    <button type="submit" class="btn btn-primary">Add Movie</button>
    <br />
    <div asp-validation-summary="All"></div>
</form>